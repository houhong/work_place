package cn.itcast.demo2;

import java.io.File;
/*
 *  对一个目录的下的所有内容,进行完全的遍历
 *  编程技巧,方法的递归调用,自己调用自己
 */

public class AbsoluteReturn {

	public AbsoluteReturn() {
		// TODO 自动生成的构造函数存根
	}
	
 public static void getAllDirctory(File file){
	 
	 System.out.println(file);//无关的语言
	 //得到该目录下的所有子目录
	 File[] lf = file.listFiles();//有关
	 //遍历
	 for(File file2 : lf){//有关
		 //最重要的算法 --就是这散步
		 if(file2.isDirectory()){//核心语言
			 
			 getAllDirctory(file2);//核心语言
		 }else{
			System.out.println(file2);//核心语言
		 }
	 }
 }
}
