package demo;
/*
 * 三角形
 * 1.输出三角形
        *
       ***
      *****
     *******
    *********
   ***********
  *************
 ***************
*/

public class Demo1 {

	public Demo1() {
		// TODO Auto-generated constructor stub
	}
	
	public static void main(String[] args) {
		int row=4;
		int comn=1+row*2;
		for (int i = 1; i <= row; i++) {
			for (int j = 1; j <= comn; j++) {
				
				//System.out.print("*");
					
					System.out.print("o");
			}
			System.out.println();
		}	
	}

}
