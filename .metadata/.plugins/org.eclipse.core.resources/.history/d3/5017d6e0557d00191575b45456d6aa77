package 作业2;



public class Input implements Runnable{

	//准备数据
	
	public Resource re;
	public Input(Resource re) {
		this.re = re;
	}

	@Override
	public   void run() {
		// TODO 自动生成的方法存根

		while(true){
			//使输出线程等待
			synchronized(re){

				if(re.intput_flag ==20){
					System.out.println("水注入了");
					re.notify();
					re.setIntput_flag(0);
				}

			     System.out.println("需要注水！  --一次注入5L");
				try {
					re.wait();
				} catch (InterruptedException e) {
					// TODO 自动生成的 catch 块
					e.printStackTrace();
				}


			}

		}



	}

}
